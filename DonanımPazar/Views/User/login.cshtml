@model DonanımPazar.Models.tbl_user
@{
    ViewBag.Title = "login";
    Layout = "/Views/Shared/_Layout1.cshtml";
}

<style>
    #box {
        border: 1px solid black;
        height: 100%;
        border-radius: 10px;
        background: #e9f0f7;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 50px;
        background-color: whitesmoke;
        box-shadow: 20px 20px 60px #8eb3d5, -20px -20px 60px #c0f2ff;
        background: #a7d2fb;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm())
        {
            <div class="insidebox">
                <div> <h1>Giriş Yap</h1></div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <span style="color:red"> @Html.ValidationMessageFor(x => x.u_email) </span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                        @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Sifre" })
                    </div>
                    <span style="color:red"> @Html.ValidationMessageFor(x => x.u_password) </span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success btn-block" />
                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>

                <!-- Kayıt olma için link -->
                <div class="form-group">
                    <p>Hesabınız Yok Mu? <a href="@Url.Action("Register", "User")">Kayıt Ol</a></p>
                    <p>Admin Misiniz? <a href="@Url.Action("Login", "Admin")">Giriş Yap</a></p>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
