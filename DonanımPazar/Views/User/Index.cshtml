@using PagedList.Mvc
@model  PagedList.IPagedList<DonanımPazar.Models.tbl_category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <style>
        body {
            background-color: #e9f0f7;
        }

        .rounded-box {
            border-radius: 10px;
            overflow: hidden;
        }
    </style>


</head>

<body>


    <div class="container" style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">



            </div>

        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height: 200px; margin-top: 100px; box-shadow: 20px 20px 60px #c6ccd2, -20px -20px 60px #ffffff;">
                        <img src="@Url.Content(item.cat_image)" style="height:100%;width:100%;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.cat_name, "Ads", new { id = @item.cat_id })</h4>

                    </div>
                }
            }




        </div>
    </div>

        <div id="container" style="margin-left: 20px">
            <p></p>
            <p></p>
            <div class="pagination" style="margin-left: 400px">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
</body>
</html>
