@model DonanımPazar.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    td {
        padding: 20px;
    }
    
    .center-image {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    
</style>



<div class="row">
    

    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:800PX; height:450PX" />

        <div>
            <h1> </h1>
            <p>@Model.pro_des</p>
        </div>

        <table>

            <tr> <td>Fiyat : </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Kategori  : </td> <td>@Model.cat_name </td> </tr>
            <tr> <td>İlan Sahibi   : </td> <td>@Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /> </td> </tr>
            <tr> <td>İletişim  : </td> <td>@Model.u_contact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                    {

                        @Html.ActionLink("Ürünü Kaldır", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                    }
                </td>
            </tr>

        </table>



    </div>

    
</div>
